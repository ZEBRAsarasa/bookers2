  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user, url: edit_user_path(current_user.id), local: true do |f| %>

        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br />
          <%=  %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.submit "Update User" %><br />
        </div>
    </div>
  </div>
</div>