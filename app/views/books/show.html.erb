<p id=notice><%= flash[:notice] %></p>

<div class="container">
  <div class="row">
     <%= render 'books/list', book: @book, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">

        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@books.user.id) do %>
                <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, fallback: 'no_image.jpg', size:'40x40' %><br />
                <%= @books.user.name %>
              <% end %>
            </td>
            <td><%= link_to @books.title, book_path(@books.id) %></td>
            <td><%= @books.body %></td>
            <% if @books.user === current_user %>
              <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@books.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>

      </table>
    </div>
  </div>
</div>